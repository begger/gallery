.container
  .content
    .row
      .span12= alert_message_for(flash)

    .page-header
      %h1
        = @photo.name
        %small Photo

    %h2= @photo.description

    .row
      .span12
        = image_tag(@photo.image.url, :alt => @photo.name)

    .row
      .span12
        %p
          - if user_signed_in? && current_user.admin?
            = link_to 'Edit', edit_photo_path(@photo), :class => 'btn btn-primary'
          = link_to 'Back', photo_set_path(@photo.photo_set)
