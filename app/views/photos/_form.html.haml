= simple_form_for([@photo_set, @photo], :html => { :method => :put, :class => 'form-horizontal validate' }) do |f|
  = f.error_notification

  %fieldset
    = f.input :name, :required => true
    = f.input :description, :required => true, :as => :text, :input_html => { :maxlength => 255 }
    = f.input :image, :required => false, :as => :image_preview, :input_html => { :preview_version => :thumbnail }

  .form-actions
    = f.button :submit, :class => 'btn-primary btn-large'
