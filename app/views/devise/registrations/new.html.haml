.container
  .content
    %h2 Sign up
    .row
      .span12
        = simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :class => 'form-horizontal validate' }) do |f|
          = f.error_notification
          %fieldset
            %legend Let's set up an account for you!
            = f.input :email, :required => true, :autofocus => true
            = f.input :password, :required => true
            = f.input :password_confirmation, :required => true
          .form-actions
            = f.button :submit, 'Sign up', :class => 'btn-primary btn-large'
            = link_to 'Or, sign up using Facebook', omniauth_authorize_path(resource_name, :facebook)
